<h1>Editing survey</h1>

<% form_for @survey, @survey, :url => "/surveys/update/" + @survey.owner_hash do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :group %><br />
    <%= f.text_field :group %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<a href="/surveys/show/<%=h @survey.owner_hash %>">Show</a> |
<%= link_to 'Back', surveys_path %>